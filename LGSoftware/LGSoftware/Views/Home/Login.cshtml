
@{
    ViewBag.Title = "Login";
}
<html>
<body>
    <div style="height:100%; opacity:0.8;" id="equalizar"></div>
    <img src="~/img/capa-games.jpg" style=" height:100%;width:100%; z-index:1">
    <center>
        <div style="position:absolute;width:800px; top:200px;z-index:2;left:500px;" class="col-lg-5 ml-auto" data-aos="fade-up" data-aos-delay="500">
            <form action="" method="post" class="form-box">
                <h3 class="h4 text-black mb-4">Logar</h3>
                <div class="form-group">
                    <input type="text" name="usuario_email" class="form-control" placeholder="Email/Usuário">
                </div>
                <div class="form-group">
                    <input type="password" name="senha" class="form-control" placeholder="Senha">
                </div>
                @*<div class="form-group mb-4">
                        <input type="password" class="form-control" placeholder="Re-type Password">
                    </div>*@
                <div class="form-group">
                    <input type="submit" id="btn_logar" class="btn btn-primary btn-pill" value="Entrar">
                </div>
            </form>
        </div>
    </center>
</body>
</html>
<script src="~/js/main.js"></script>
